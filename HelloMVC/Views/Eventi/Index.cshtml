@model EventiIndexViewModel

@if( Model.NumeroTotaleEventi == 0)
{
    <h3>Non ci sono eventi</h3>
} else
{
    <h3>Lista eventi</h3>
    <p>Numero totale di eventi: @Model.NumeroTotaleEventi</p>
    <a href="/eventi/create" class="btn btn-info" style="margin-bottom:10px">Aggiungi evento</a>

    <table class="table table-striped table-bordered table-hover">
        <tr>
            <th>Id</th>
            <th>Titolo</th>
            <th>Data</th>
            <th>Luogo</th>
        </tr>
        @foreach (var evento in Model.Eventi)
        {
            <tr>
                <td>@evento.Id</td>
                <td>@evento.Titolo</td>
                <td>@evento.Data.ToShortDateString()</td>
                <td>@evento.Località</td>
            </tr>
        }
    </table>
}

